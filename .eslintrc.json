{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": "tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/no-non-null-assertion": "off"
  },
  "ignorePatterns": ["jest.config.js", "webpack/*", "www/assets/js/*"]
}
